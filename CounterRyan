public class Counter {
	
	private int value;
	
	public Counter (int initialValue){
		value=initialValue;
	}
	
	public void count(){
		value = value+1;
	}
	
	public int getValue(){
		return value;
	}
	public void resetIDs(int centralsize){
		value = centralsize;
	}
	public void setValue(int input){
		value = input;
	}
	
}
